<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".PerfumesMasculinosActivity">


    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/idToolBarPerfumeMasculino"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            app:navigationIcon="@drawable/baseline_arrow_back"
            app:title="Perfumes Masculinos"
            app:titleCentered="true"
            app:titleTextColor="#673AB7"


            />

    </com.google.android.material.appbar.AppBarLayout>


    <com.google.android.material.tabs.TabLayout
        android:id="@+id/idTabLayoutPerfumeLacrado"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.tabs.TabItem
            android:id="@+id/idPerfumeLacrado"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lacrados" />

        <com.google.android.material.tabs.TabItem
            android:id="@+id/idPerfumeDecant"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Decants" />

    </com.google.android.material.tabs.TabLayout>


    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/idViewPagerPerfumesMasculinos"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />


</LinearLayout>